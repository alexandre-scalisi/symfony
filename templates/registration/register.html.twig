{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="mb-6 text-xl">S'inscrire</h1>

    {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="mb-4">
        {{ form_row(registrationForm.username, {label: 'Pseudo'}) }}
        </div>
        <div class="mb-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        </div>
        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="border border-gray-800 px-2 py-1">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
